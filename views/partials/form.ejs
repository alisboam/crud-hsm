<input type="hidden" class="form-control" name="id" value="<%= course.id%>" id="id">

<div class="form-group row data">
  <label for="title" class="col-sm-2 col-form-label">Título</label>
  <div class="col-sm-10">
  <input type="text" class="form-control" name="title" value="<%= course.title%>" id="title" required>
  </div>
</div>
<div class="form-group row data">
  <label for="description" class="col-sm-2 col-form-label">Descricao</label>
  <div class="col-sm-10">
  <input type="text" class="form-control" name="description" value="<%= course.description%>" id="description" required>
  </div>
</div>
<div class="form-group row data">
  <label for="image" class="col-sm-2 col-form-label">Imagem</label>
  <div class="col-sm-10">
  <input type="url" class="form-control" name="image" value="<%= course.image%>" id="image" required>
  </div>
</div>
<div class="form-group row data">
  <label for="teacher" class="col-sm-2 col-form-label">Nome Professor</label>
  <div class="col-sm-10">
  <input type="text" class="form-control" name="teacher" value="<%= course.teacher%>" id="teacher" required>
  </div>
</div>
<div class="form-group row data">
  <label for="classList" class="col-sm-2 col-form-label">Lista de aulas</label>
  <div class="col-sm-10">
  <input type="text" class="form-control" name="classList" value="<%= course.classList%>" id="classList" placeholder="Separe os links por vírgula" required>
  </div>
</div>
<div class="d-flex justify-content-center">
  <button id="cancel-btn" type="button" class="btn btn-secondary" onclick="window.history.back();">Cancelar</button>
  <button id="send-btn" type="submit" class="btn btn-primary">Enviar</button>
</div>
